<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 通用输入框样式 -->
    <style name="mEditText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ems">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/edittext_input_bg</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <!-- 通用数字文本样式 -->
    <style name="mTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 通用版本信息文本样式 -->
    <style name="mTextView2">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!-- 通用dialog样式 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否不显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--设置dialog的背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.95</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--显示在屏幕中间-->
        <item name="android:layout_centerInParent">true</item>
        <!--&lt;!&ndash;最小宽度&ndash;&gt;-->
        <!--<item name="android:minWidth">800dp</item>-->
        <!--&lt;!&ndash;最小高度&ndash;&gt;-->
        <!--<item name="android:minHeight">280dp</item>-->
    </style>
    <!-- 通用dialog样式 -->
    <style name="LoadDialog" parent="android:style/Theme.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否不显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--设置dialog的背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.92</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--显示在屏幕中间-->
        <item name="android:layout_centerInParent">true</item>
        <!--&lt;!&ndash;最小宽度&ndash;&gt;-->
        <!--<item name="android:minWidth">800dp</item>-->
        <!--&lt;!&ndash;最小高度&ndash;&gt;-->
        <!--<item name="android:minHeight">280dp</item>-->
    </style>
    <!-- setting_dialog样式 -->
    <style name="SettingDialog" parent="android:style/Theme.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否不显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--设置dialog的背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.95</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--显示在屏幕中间-->
        <item name="android:layout_centerInParent">true</item>
        <!--最小宽度-->
        <item name="android:minWidth">800dp</item>
        <!--最小高度-->
        <item name="android:minHeight">280dp</item>
    </style>
</resources>
